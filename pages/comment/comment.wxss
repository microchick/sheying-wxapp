.asset-media-box {
    padding: 15px 15px 15px 15px;
}

.total-media-box {
    padding: 10px 15px 10px 15px;
}

.total-media-box .weui-media-box__bd_in-appmsg {
    font-size: 12px;
    line-height: 14px;
}

.asset-more image {
    width: 30px;
    height: 30px;
    margin: 15px;
    vertical-align: middle;
}

.weui-cell__ft_in-access.asset-more::after {
    content: '';
}

